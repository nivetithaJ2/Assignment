// Base class
class Vehicle {
    String brand;
    int speed;

    // Constructor
    public Vehicle(String brand, int speed) {
        this.brand = brand;
        this.speed = speed;
    }

    // Common method
    public void displayInfo() {
        System.out.println("Brand: " + brand + ", Speed: " + speed + " km/h");
    }
}

// Subclass Car
class Car extends Vehicle {
    int doors;

    public Car(String brand, int speed, int doors) {
        super(brand, speed); // call Vehicle constructor
        this.doors = doors;
    }

    public void showCarDetails() {
        displayInfo(); // reuse Vehicle method
        System.out.println("Doors: " + doors);
    }
}

// Subclass Bike
class Bike extends Vehicle {
    boolean hasGear;

    public Bike(String brand, int speed, boolean hasGear) {
        super(brand, speed);
        this.hasGear = hasGear;
    }

    public void showBikeDetails() {
        displayInfo(); // reuse Vehicle method
        System.out.println("Has Gear: " + hasGear);
    }
}

// Demo
public class VehicleManagementSystem {
    public static void main(String[] args) {
        Car car = new Car("Toyota", 180, 4);
        Bike bike = new Bike("Yamaha", 120, true);

        car.showCarDetails();
        System.out.println();
        bike.showBikeDetails();
    }
}
